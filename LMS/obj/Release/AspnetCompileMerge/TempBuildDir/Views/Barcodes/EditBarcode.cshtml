@model LMS.ViewModels.Barcodes.BarcodesEditBarcodeVM

@{
    if (Model.ID > 0)
    {
        ViewBag.Title = "Edit barcode";
        <h3>Edit barcode</h3>
    }
    else
    {
        ViewBag.Title = "Add barcode";
        <h3>Add barcode</h3>
    }
}
<hr />

@using (Html.BeginForm("EditBarcode", "Barcodes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)
    <div class="form-horizontal">               
        <div class="col-xs-10 col-md-4">
            <div style="margin-left: 30px;">
                <div class="form-group">
                    @Html.LabelFor(model => model.BarcodeNumber, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.BarcodeNumber, " ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BarcodeNumber, null, new { @style = "color:red;!important" })
                </div>  
                
                <div class="form-group">
                    <input type="submit" style="width:100px;" value="Save" class="btn btn-success" />
                </div>              
            </div>
        </div>
    </div>   
}  